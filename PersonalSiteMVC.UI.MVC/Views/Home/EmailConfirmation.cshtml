@model PersonalSiteMVC.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Email Confirmation";
}



<section class="background-gray-lightest">
    <div class="container">
        <div class="breadcrumbs">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                <li>@ViewBag.Title</li>
            </ul>
        </div>
        <h1>@ViewBag.Title</h1>
    </div>
</section>
<section class="blog-post">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="post-content margin-bottom--big">
                    <h4>You have sent the following message:</h4>
                    <p>@Model.Message</p>
                    <h4>We will respond to @Model.Email as soon as we can. Thank you for contacting us!</h4>
                </div>
                <!-- /.post-content-->
            </div>
        </div>
    </div>
</section>